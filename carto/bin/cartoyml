function usage {
  echo "cartoyml <path-to-project.yml|mml> [<path-to-output.mml>]
    If no <path-to-output.mml> is given, stdout is used."
  exit 0
}

if [ -f "$1" ]; then
  DIR="$(dirname $(realpath ${1}))"
  if [ "${1#*.}" = "yml" ] || [ "${1#*.}" = "yaml" ]; then
    MML="$DIR/project.cartoyml.tmp.mml"
    js-yaml $1 > $MML || exit 1
    clean_mml=true
  else
    MML="$1"
  fi
  carto $MML $2 || exit 1
  if [ $clean_mml ]; then
    rm $MML
  fi
else
  usage
fi
