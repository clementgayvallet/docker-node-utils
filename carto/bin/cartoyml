set -e

function usage {
  echo "cartoyml [carto options] <path-to-project.yml|mml> [<path-to-output.mml>]
    If no <path-to-output.mml> is given, stdout is used."
  exit 0
}

options=""
src=""
dst=""
is_option=false

for arg in $@; do
  case $arg in
    -*)
      options="$options $arg"
      is_option=true
      ;;
    *)
      if [ $is_option = true ]; then
        options="$options $arg"
        is_option=false
      elif [ "$src" = "" ]; then
        src="$arg"
      elif [ "$dst" = "" ]; then
        dst="$arg"
      fi
      ;;
  esac
done

if [ -f "$src" ]; then
  DIR="$(dirname $(realpath ${src}))"
  if [ "${src##*.}" = "yml" ] || [ "${src##*.}" = "yaml" ]; then
    MML="$DIR/project.cartoyml.tmp.mml"
    js-yaml $src > $MML
    clean_mml=true
  else
    MML="$src"
  fi
  if [ "$dst" = "" ]; then
    carto $options $MML
  else
    carto $options $MML > $dst
  fi
  if [ $clean_mml ]; then
    rm $MML
  fi
else
  usage
fi
